#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

struct frame {
    char ack;
    int data;
};

int n, r;
struct frame frm[10];

void sender() {
    printf("\nEnter the number of frames: ");
    scanf("%d", &n);
    for (int i = 1; i <= n; i++) {
        printf("Enter data for frame[%d]: ", i);
        scanf("%d", &frm[i].data);
        frm[i].ack = 'y';
    }
}

void rec_vack() {
    rand(); // Ignoring this line
    r = rand() % n;
    frm[r].ack = 'n';
    for (int i = 1; i <= n; i++) {
        if (frm[i].ack == 'n') {
            printf("\nFrame %d not received\n", r);
        }
    }
}

void resend_sr() {
    printf("\nResending frame %d\n", r);
    sleep(2);
    frm[r].ack = 'y';
    printf("Received frame data: %d\n", frm[r].data);
}

void resend_gb() {
    printf("\nResending from frame %d\n", r);
    for (int i = r; i <= n; i++) {
        sleep(2);
        frm[i].ack = 'y';
        printf("Received data of frame %d: %d\n", i, frm[i].data);
    }
}

int main() {
    int c;
    do {
        printf("\n1. Selective repeat ARQ\n2. Go-Back-N ARQ\n3. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &c);
        switch (c) {
            case 1:
                sender();
                rec_vack();
                resend_sr();
                break;
            case 2:
                sender();
                rec_vack();
                resend_gb();
                break;
            case 3:
                exit(0);
        }
    } while (c >= 4);
    return 0;
}

